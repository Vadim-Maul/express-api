
generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}


model UserModel {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String
  password  String
  refreshToken String?
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProductModel {
  id          Int      @id @default(autoincrement())
  name        String
  price       Decimal
  description String?
  image       String
  rating      Int      
  heatLevel   Int      
  type        Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}